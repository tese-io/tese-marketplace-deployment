{
  "name": "tese-cli",
  "version": "1.0.0",
  "type": "module",
  "description": "CLI for Tese Marketplace using forked MercurJS repositories",
  "main": "tese-cli.js",
  "bin": {
    "tese": "./tese-cli.js"
  },
  "scripts": {
    "install-marketplace": "node tese-cli.js install",
    "deploy": "node tese-cli.js deploy",
    "admin-access": "node tese-cli.js admin-access",
    "fix-auth": "node tese-cli.js fix-auth",
    "setup": "node tese-cli.js setup",
    "test": "node tese-cli.js test",
    "status": "kubectl get pods -n tese-marketplace",
    "logs": "kubectl logs -n tese-marketplace deployment/tese-backend --tail=100",
    "restart-backend": "kubectl rollout restart deployment/tese-backend -n tese-marketplace",
    "restart-all": "kubectl rollout restart deployment --all -n tese-marketplace",
    "cleanup": "kubectl delete namespace tese-marketplace"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^9.5.2", 
    "inquirer": "^8.2.6",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "ora": "^5.4.1"
  }
}
